<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="VolumeStyleBase">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="VolumeTitleStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/VolumeTitleTextSize</item>
    </style>

    <style name="VolumeAuthorStyle" parent="VolumeStyleBase">
        <item name="android:textSize">@dimen/VolumeAuthorTextSize</item>
    </style>

    <style name="VolumePublisherStyle" parent="VolumeStyleBase">
        <item name="android:textSize">@dimen/VolumePublisherTextSize</item>
    </style>

    <style name="VolumeDescriptionStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/VolumeDescriptionTextSize</item>
    </style>
</resources>
